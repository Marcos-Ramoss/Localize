<!DOCTYPE html>
<html lang="pt">
<head>
  <%- include('partials/head') %>
  <%- include('partials/navbar') %>
  <title>Editar Produto</title>
</head>
<body>
  <div class="container col-6 mt-5">
    <h1 class="text-center mb-4">Editar Produto</h1>

    <form method="post" action="/products/<%= product._id %>/edit" enctype="multipart/form-data" class="form-custom">
      <div class="mb-3">
        <label class="form-label" for="nome">Nome:</label>
        <input class="form-control" type="text" id="nome" name="nome" value="<%= product.nome %>" required>

        <label class="form-label" for="marca">Marca:</label>
        <input class="form-control" type="text" id="marca" name="marca" value="<%= product.marca %>" required>

        <label class="form-label" for="estoque">Estoque:</label>
        <input class="form-control" type="number" id="estoque" name="estoque" value="<%= product.estoque %>" required>

        <label class="form-label" for="local">Local:</label>
        <input class="form-control" type="text" id="local" name="local" value="<%= product.local %>" required>

        <label class="form-label" for="valor">Valor:</label>
        <input class="form-control" type="number" step="0.01" id="valor" name="valor" value="<%= product.valor %>" required>

        <label class="form-label" for="imagem">Imagem:</label>
        <input class="form-control" type="file" name="imagem" accept="image/*">
      </div>

      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-custom">Salvar Alterações</button>
      </div>
    </form>

    <form method="post" action="/products/<%= product._id %>/delete" class="form-custom mt-3">
      <div class="d-grid gap-2">
        <button class="btn btn-danger" type="submit" onclick="return confirm('Tem certeza que deseja deletar este produto?');">Deletar Produto</button>
      </div>
    </form>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
